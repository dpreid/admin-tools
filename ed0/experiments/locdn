# location down script - shutdown all experiments in a location
# usage example: locdn jcmb2417

set -x #debugging
export LOCATION=$1

# parse ~/secret/experiments.yaml to make ./inventory (advanced - check if existing one is up to date to save time)

# run shutdown playbook against location

export ANSIBLE_SSH_EXECUTABLE=echo #../jump/login.sh
#export ANSIBLE_SSH_HOST_KEY_CHECKING=false
ansible-playbook -vvvv  -i ./inventory helloworld.yml -e "variable_host=$LOCATION"

